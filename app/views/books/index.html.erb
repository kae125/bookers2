<h2>User info</h2>

<h2>New book</h2>

<%= form_with model: @book  do |form| %>

<div class="form-group">
<%= form.label :title %><br>
<%= form.text_field :title %>
</div>

<div class="form-group">
<%= form.label :opinion %><br>
<%= form.text_area :body %>
</div>

<%= form.submit 'Create Book'%>
<% end %>

<h2>Books</h2>
<table>
 <thead>
  <tr>
    <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
   <% @books.each do |book| %>
  <tr>
  <td>
    image
  </td>
  <td>
    <%=link_to book.title, book_path(book.id) %>
  </td>
  <td>
   <%= book.body %>
  </td>
  </tr>
  <% end %>
 </tbody>
 </table>

