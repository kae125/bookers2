<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |value| %>
   <div class="flash-message"><%= value %></div>
  <% end %>
 <% end %>

<%= form_with model: @book  do |form| %>

<div class="form-group">
<%= form.label :title %><br>
<%= form.text_field :title %>
</div>

<div class="form-group">
<%= form.label :opinion %><br>
<%= form.text_area :body %>
</div>

<%= form.submit 'Update Book'%>
<% end %>

<tr>
 <td>
  <%= link_to "Show", book_path(@book.id) %>
 </td>
 <td>
  <%= link_to "Back", books_path %>
 </td>
</tr>

<% if @selected_book %>
    <div class="book">
      <h2><%= @selected_book.title %></h2>
      <p><%= @selected_book.body %></p>
    </div>
  <% end %>
  </div>
