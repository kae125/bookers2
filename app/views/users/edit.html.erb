<h1>User info</h1>

<%= form_with model: @user  do |form| %>

<div class="form-group">
<%= form.label :name %><br>
<%= form.text_field :name %>
</div>

<div class="form-group">
<%= form.label :image %><br>
<%= form.file_field :profile_image, accept: "image/*" %>
</div>

<div class="form-group">
<%= form.label :introduction %><br>
<%= form.text_area :introduction %>
</div>

<%= form.submit 'Update User'%>
<% end %>