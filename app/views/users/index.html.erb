<div class= "container px-5 px-sm-0">
  <div class= "row">
    <div class= "col-md-3">
     <h2>User info</h2>
     <br>image</br>
     <tr>name</tr>
     <br>introduction</br>

      <h2>New book</h2>

      <%= form_with model: @book  do |form| %>

        <div class="form-group">
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        </div>
        
        <div class="form-group">
        <%= form.label :opinion %><br>
        <%= form.text_area :body %>
        </div>
        
        <%= form.submit 'Create Book'%>
        <% end %>
        
        <h2>Books</h2>
        <table>
         <thead>
          <tr>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
         </thead>
        </table>
    </div>
  </div>
 </div>
  
  <% if @selected_book %>
    <div class="book">
      <h2><%= @selected_book.title %></h2>
      <p><%= @selected_book.body %></p>
    </div>
  <% end %>
  </div>